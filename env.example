# Supabase Configuration
# Copy this file to .env.local and fill in your actual values

# Supabase Project URL (from your Supabase project settings)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (from your Supabase project settings)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (for admin operations - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Optional: Database URL (if using direct connection)
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Midtrans Configuration
# Get these from Midtrans Dashboard: https://dashboard.midtrans.com/
MIDTRANS_SERVER_KEY=your-midtrans-server-key-here
MIDTRANS_CLIENT_KEY=your-midtrans-client-key-here
NEXT_PUBLIC_MIDTRANS_CLIENT_KEY=your-midtrans-client-key-here

# Environment: sandbox or production
MIDTRANS_ENVIRONMENT=sandbox

# For webhook notifications
NEXT_PUBLIC_APP_URL=http://localhost:3000